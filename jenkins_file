pipeline {
  agent { node { label 'slave01' } }

   stages {
   	    stage('Clone Sources')
		steps {
          	   checkout scm
                       } 
           }
      
      		stage('C') {
	  		when { anyOf {
				environment name: 'LANGUAGE', value: 'C'
				environment name: 'LANGUAGE', value: 'All'
			}
	        }
		  }
		    stage('Python') {
	  		when { anyOf {
				environment name: 'LANGUAGE', value: 'Python'
				environment name: 'LANGUAGE', value: 'All'
			}
	        }
		  }
			stage('Bash') {
	  		when { anyOf {
				environment name: 'LANGUAGE', value: 'Bash'
				environment name: 'LANGUAGE', value: 'All'
			}
	        }
		  }
	 }
	
